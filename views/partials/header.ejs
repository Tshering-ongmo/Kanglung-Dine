<style>
  /* ===== NAVBAR STYLING ===== */
.navbar {
  background-color: #0f1653;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.navbar .logo {
  color: white;
  font-size: 1.5rem;
  font-weight: bold;
}

.nav-links {
  list-style: none;
  display: flex;
  gap: 1.5rem;
  margin: 0;
  padding: 0;
}

.nav-links li a {
  color: white;
  text-decoration: none;
  padding: 0.5rem 1rem;
  position: relative;
  transition: all 0.3s ease;
}

/* Underline on hover with orange (#ff6600) */
.nav-links li a::after {
  content: "";
  position: absolute;
  width: 0%;
  height: 2px;
  left: 0;
  bottom: 0;
  background-color: #ff6600;
  transition: width 0.3s ease;
}

.nav-links li a:hover::after {
  width: 100%;
}

/* LOGIN & SIGNUP BUTTONS */
.login-btn {
  background-color: #ffc107;
  border-radius: 5px;
  padding: 0.5rem 1rem;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.login-btn:hover,
.login-btn:active {
  background-color: #ff6600;
  color: #fff;
}


</style>
<!-- ===== NAVBAR ===== -->
<header>
  <nav class="navbar">
    <div class="logo">KanglungDine</div>
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/login" class="login-btn">Login</a></li>
      <li><a href="/signup" class="login-btn">Signup</a></li>
    </ul>
  </nav>
</header>
